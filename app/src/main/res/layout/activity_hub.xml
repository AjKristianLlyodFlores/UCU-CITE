<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="-2dp"
    tools:layout_editor_absoluteY="119dp">
    android:fillViewport="true";

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A8B1B6"
        tools:context=".hub">

        <View
            android:id="@+id/view2"
            android:layout_width="427dp"
            android:layout_height="89dp"
            android:background="#8FAEBF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view3"
            android:layout_width="427dp"
            android:layout_height="27dp"
            android:background="@color/browser_actions_title_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="75dp"
            android:layout_height="67dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bg" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="234dp"
            android:layout_height="25dp"
            android:layout_marginTop="36dp"
            android:text="UCU CITE INFORMATION HUB"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/view2" />

        <Button
            android:id="@+id/profile2"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_launcher_foreground"
            android:backgroundTint="#FAF5F5"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="44dp"
            android:background="#1E0091EA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3"
            app:srcCompat="@drawable/yu" />

        <ImageView
            android:id="@+id/it"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="48dp"
            android:background="#1E0091EA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/imageView8"
            app:layout_constraintTop_toBottomOf="@+id/view3"
            app:srcCompat="@drawable/it" />

        <TextView
            android:id="@+id/ucu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:background="#FAF6F6"
            android:text="URDANETA CITY UNIVERSITY"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />

        <TextView
            android:id="@+id/ikonek1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="12dp"
            android:background="#FDFBFB"
            android:text="UCU_IKONEK"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ikonek" />

        <TextView
            android:id="@+id/psy1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="12dp"
            android:background="#FDFBFB"
            android:text="UCU_PSYCHOLOGICAL"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/psy" />

        <TextView
            android:id="@+id/portal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="12dp"
            android:background="#FDFBFB"
            android:text="UCU_PORTAL"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/portal" />

        <TextView
            android:id="@+id/ucusc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="#FDFBFB"
            android:text="UCU_SC"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.607"
            app:layout_constraintStart_toEndOf="@+id/portal1"
            app:layout_constraintTop_toBottomOf="@+id/ucusc" />

        <TextView
            android:id="@+id/account1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="#FDFBFB"
            android:text="UCU_ACCOUNTING"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.581"
            app:layout_constraintStart_toEndOf="@+id/psy1"
            app:layout_constraintTop_toBottomOf="@+id/account" />

        <TextView
            android:id="@+id/mis1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="#FDFBFB"
            android:text="UCU_MIS+"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.598"
            app:layout_constraintStart_toEndOf="@+id/ikonek1"
            app:layout_constraintTop_toBottomOf="@+id/mis" />

        <TextView
            android:id="@+id/it1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="#FDFBFB"
            android:text="UCU_IT_SITE"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toEndOf="@+id/ucu1"
            app:layout_constraintTop_toBottomOf="@+id/it" />

        <ImageView
            android:id="@+id/ikonek"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="24dp"
            android:background="#1E0091EA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ucu1"
            app:srcCompat="@drawable/ikonek" />

        <ImageView
            android:id="@+id/mis"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginTop="24dp"
            android:background="#1E0091EA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.561"
            app:layout_constraintStart_toEndOf="@+id/ikonek"
            app:layout_constraintTop_toBottomOf="@+id/it1"
            app:srcCompat="@drawable/ucumis" />

        <ImageView
            android:id="@+id/psy"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="24dp"
            android:background="#1E0091EA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ikonek1"
            app:srcCompat="@drawable/ucup" />

        <ImageView
            android:id="@+id/account"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginTop="24dp"
            android:background="#1E0091EA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.561"
            app:layout_constraintStart_toEndOf="@+id/psy"
            app:layout_constraintTop_toBottomOf="@+id/mis1"
            app:srcCompat="@drawable/ucuacc" />

        <ImageView
            android:id="@+id/portal"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="24dp"
            android:background="#1E0091EA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/psy1"
            app:srcCompat="@drawable/ucuportal" />

        <ImageView
            android:id="@+id/ucusc"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginTop="24dp"
            android:background="#1E0091EA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.561"
            app:layout_constraintStart_toEndOf="@+id/portal"
            app:layout_constraintTop_toBottomOf="@+id/account1"
            app:srcCompat="@drawable/ucusc" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="#01DDFF"
            android:onClick="logout"
            android:text="LOGOUT"
            app:layout_constraintEnd_toEndOf="@+id/ucusc1"
            app:layout_constraintHorizontal_bias="0.578"
            app:layout_constraintStart_toStartOf="@+id/portal1"
            app:layout_constraintTop_toBottomOf="@+id/portal1" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>